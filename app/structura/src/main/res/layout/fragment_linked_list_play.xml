<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.davisosa.structura.LinkedListPlayFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer_height"
            android:background="@color/footer_bg"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <View xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/footer_separator_height"
                android:background="@color/footer_separator_color"
                android:gravity="start|center_vertical"
                android:id="@+id/view"
                android:layout_marginBottom="@dimen/footer_height" />
        </FrameLayout>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="@string/add_node_label"
            android:id="@+id/addButton"
            android:layout_gravity="right|center_vertical"
            android:clickable="true"
            android:textColor="@color/theme_accent_1"
            android:textSize="@dimen/text_size_medium"
            android:background="?selectableItemBackground"
            android:paddingLeft="@dimen/ins_button_padding"
            android:paddingRight="@dimen/ins_button_padding"
            android:singleLine="true"
            android:layout_marginBottom="@dimen/insert_margin_bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/insert_margin_right" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="@string/delete_node_label"
            android:id="@+id/deleteButton"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:layout_gravity="right|center_vertical"
            android:singleLine="true"
            android:textSize="@dimen/text_size_medium"
            android:paddingLeft="@dimen/del_button_padding"
            android:paddingRight="@dimen/del_button_padding"
            android:textColor="@color/theme_accent_1"
            android:layout_alignTop="@+id/addButton"
            android:layout_toLeftOf="@+id/addButton"
            android:layout_toStartOf="@+id/addButton"
            android:layout_marginRight="@dimen/delete_margin_right" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="@string/search_node_label"
            android:id="@+id/searchButton"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:layout_gravity="right|center_vertical"
            android:singleLine="true"
            android:textSize="@dimen/text_size_medium"
            android:paddingLeft="@dimen/search_button_padding"
            android:paddingRight="@dimen/search_button_padding"
            android:textColor="@color/theme_accent_1"
            android:layout_alignTop="@+id/deleteButton"
            android:layout_toLeftOf="@+id/deleteButton"
            android:layout_toStartOf="@+id/deleteButton"
            android:layout_marginRight="@dimen/search_margin_right" />
    </RelativeLayout>


</FrameLayout>
